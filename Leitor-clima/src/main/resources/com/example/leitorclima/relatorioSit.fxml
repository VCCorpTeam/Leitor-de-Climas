               <PropertyValueFactory property="valor" />
            </cellValueFactory>
         </TableColumn>
         <TableColumn prefWidth="97.0" text="Horário">
            <cellValueFactory>
               <PropertyValueFactory property="valor" />
            </cellValueFactory>
