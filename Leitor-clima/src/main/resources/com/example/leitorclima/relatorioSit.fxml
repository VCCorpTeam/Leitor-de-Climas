          <PropertyValueFactory property="parametro" />
        </cellValueFactory>
      </TableColumn>
      <TableColumn prefWidth="93.0" text="Valor">
        <cellValueFactory>
          <PropertyValueFactory property="valor" />
        </cellValueFactory>
      </TableColumn>
